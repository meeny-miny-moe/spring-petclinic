apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: petclinic-monitor
  labels:
    release: monitoring  # ← Prometheus Helm release 이름과 일치해야 함
spec:
  selector:
    matchLabels:
      app: petclinic
  endpoints:
    - port: http
      path: /actuator/prometheus
      interval: 15s
