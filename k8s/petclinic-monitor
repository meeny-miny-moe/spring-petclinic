apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: petclinic-monitor
  namespace: default
  labels:
    release: monitoring  # ← Prometheus 헬름 릴리즈 이름과 반드시 일치해야 함
spec:
  selector:
    matchLabels:
      app: petclinic
  namespaceSelector:
    matchNames:
      - default
  endpoints:
    - port: http
      path: /actuator/prometheus
      interval: 15s

